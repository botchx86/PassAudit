# PassAudit Environment Configuration
# Copy this file to .env and customize for your deployment

# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key-in-production
FLASK_ENV=production

# Web Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/passaudit

# Redis Configuration (if using Redis for sessions)
# REDIS_URL=redis://localhost:6379/0

# Security Settings
# SESSION_COOKIE_SECURE=true  # Set to true when using HTTPS
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=Lax

# HIBP Settings
HIBP_CHECK_ENABLED=false
HIBP_TIMEOUT=5
HIBP_CACHE_ENABLED=true
HIBP_CACHE_EXPIRATION_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=false

# Performance Settings
BATCH_PROCESSING_THREADS=4
MAX_BATCH_SIZE=1000

# Rate Limiting (if enabled)
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_PER_MINUTE=10

# Email Configuration (for scheduled audits)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=passaudit@example.com
